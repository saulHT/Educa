
@{Layout = null;}
<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8">
  <title>Educa</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
  <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
<link rel="stylesheet" href="~/css/site.css">
<link rel="shortcut icon" href="~/Images/Home/LogoIconEduca.png">
<link rel="stylesheet" href="~/css/NotaUsuarioStyle.css">
<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
<!-- partial:index.partial.html -->
<div class="app-container">
  <div class="app-header">
    <div class="app-header-left">
      <span class="app-icon"></span>
      <p class="app-name">Educa</p>
      <p class="app-Coment">Es hora de Aprender</p>
    </div>
    <div class="app-header-right">
      <button class="mode-switch" title="Switch Theme">
        <svg class="moon" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" width="24" height="24" viewBox="0 0 24 24">
          <defs></defs>
          <path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"></path>
        </svg>
      </button>
      <button class="profile-btn">
        <span>Hola! @ViewBag.Nombre</span>
        <img src="@ViewBag.Avatar" />
      </button>

    </div>
    <button class="messages-btn">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-message-circle">
        <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z" /></svg>
    </button>
  </div>
  <div class="app-content">
    <div class="app-sidebar">
      <a href="/home/index" class="app-sidebar-link ">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
          <polyline points="9 22 9 12 15 12 15 22" /></svg>
      </a>
      <a href="/home/NotasUsuario" class="app-sidebar-link active">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><circle cx="12" cy="8" r="7"/><path d="M8.21 13.89L7 23l5-3l5 3l-1.21-9.12"/></g></svg>
      </a>
      <a href="/home/educaNinja" class="app-sidebar-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M8.56 2.75c4.37 6.03 6.02 9.42 8.03 17.72m2.54-15.38c-3.72 4.35-8.94 5.66-16.88 5.85m19.5 1.9c-3.5-.93-6.63-.82-8.94 0c-2.58.92-5.01 2.86-7.44 6.32"/></g></svg>
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
          <line x1="16" y1="2" x2="16" y2="6" />
          <line x1="8" y1="2" x2="8" y2="6" />
          <line x1="3" y1="10" x2="21" y2="10" /></svg>
      </a>
      <a href="/home/info" class="app-sidebar-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4m0-4h.01"/></g></svg>
          <defs />
          <circle cx="12" cy="12" r="3" />
          <path d="M19.4 15a1.65 1.65 0 00.33 1.82l.06.06a2 2 0 010 2.83 2 2 0 01-2.83 0l-.06-.06a1.65 1.65 0 00-1.82-.33 1.65 1.65 0 00-1 1.51V21a2 2 0 01-2 2 2 2 0 01-2-2v-.09A1.65 1.65 0 009 19.4a1.65 1.65 0 00-1.82.33l-.06.06a2 2 0 01-2.83 0 2 2 0 010-2.83l.06-.06a1.65 1.65 0 00.33-1.82 1.65 1.65 0 00-1.51-1H3a2 2 0 01-2-2 2 2 0 012-2h.09A1.65 1.65 0 004.6 9a1.65 1.65 0 00-.33-1.82l-.06-.06a2 2 0 010-2.83 2 2 0 012.83 0l.06.06a1.65 1.65 0 001.82.33H9a1.65 1.65 0 001-1.51V3a2 2 0 012-2 2 2 0 012 2v.09a1.65 1.65 0 001 1.51 1.65 1.65 0 001.82-.33l.06-.06a2 2 0 012.83 0 2 2 0 010 2.83l-.06.06a1.65 1.65 0 00-.33 1.82V9a1.65 1.65 0 001.51 1H21a2 2 0 012 2 2 2 0 01-2 2h-.09a1.65 1.65 0 00-1.51 1z" />
        </svg>
      </a>
      <a href="/auth/logout?user=@ViewBag.Nombre" class="app-sidebar-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4m7 14l5-5l-5-5m5 5H9"/></svg>
      </a>
    </div>
    <div class="projects-section">
       <section id="content">			
					<main>
				<ul class="box-info">
					@foreach (var item in ViewBag.Temas)
					{
								@if (item.Temas.TituloTema == "Comprensión de palabras y frases")
								{
									<li>
										<i class='bx bx-ghost' ></i>
										<span class="text">
											<h3>@item.Temas.TituloTema</h3>
											<p title="Promediado: Subtemas/NotasPruebas">Avance: @item.PorcentajeAvance% / Nota: @item.NotaPrueba</p>
										</span>
									</li>
								}else if(item.Temas.TituloTema == "Comprensión lectora")
								{
									<li>
										<i class='bx bx-book-open' ></i>
										<span class="text">
											<h3>@item.Temas.TituloTema</h3>
											<p>Avance: @item.PorcentajeAvance% / Nota: @item.NotaPrueba</p>
										</span>
									</li>
								}else if (item.Temas.TituloTema == "Comprensión auditiva")
								{
									<li>
										<i class='bx bx-user-voice' ></i>
										<span class="text">
											<h3>@item.Temas.TituloTema</h3>
											<p>Avance: @item.PorcentajeAvance% / Nota: @item.NotaPrueba</p>
										</span>
									</li>
								}
							}
					
					
					
				</ul>

				<div class="table-data">
					<div class="order">
						<div class="head">
							<h3>Subtemas</h3>
							
						</div>
						<table>
							<thead>
								<tr>
									<th>Nombre</th>
									<th>Tipo Subtema</th>
									<th>Nota Prueba</th>
									<th>Tema(Pertenece)</th>
									<th>Estado</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in ViewBag.Subtemas){
									<tr>
									<td>
										<img src="@item.Subtemas.LinkImgSubtema">
										<p>@item.Subtemas.TituloSubtema</p>
									</td>
									<td>@item.Subtemas.TipoSubtema</td>
									<td>@item.NotaPrueba</td>
									<td>@item.Subtemas.Temas.TituloTema</td>
												@if (item.EstadoSubtema == "TerminadoTodo")
												{
													<td><span class="status completed">Terminado</span></td>
												}else if(item.EstadoSubtema == "Inhabilitado")
												{
													<td><span class="status pending">No iniciado</span></td>
												}
												else
												{
													<td><span class="status process">En proceso</span></td>
												}

								</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
				<div class="table-data">
					<div class="order">
						<div class="head">
							<h3>Lecciones</h3>
							
						</div>
						<table>
							<thead>
								<tr>
									<th>Nombre</th>
									<th>Tipo Lección</th>
									<th title="Promediado con los Ejercicios">Nota Lección</th>
									<th>Subtema(Pertenece)</th>
									<th>Estado</th>
								</tr>
							</thead>
							<tbody>
										@foreach (var item in ViewBag.Lecciones)
										{
											<tr>
												<td>
													<img src="@item.Lecciones.LinkImgLeccion">
													<p>@item.Lecciones.TituloLeccion</p>
												</td>
												<td>@item.Lecciones.TipoLeccion</td>
												<td>@item.NotaLeccion</td>
												<td>@item.Lecciones.Subtemas.TituloSubtema</td>
												@if (item.EstadoLeccion == "Terminado")
												{
													<td><span class="status completed">Terminado</span></td>
												}else if(item.EstadoLeccion == "Inhabilitado")
												{
													<td><span class="status pending">No iniciado</span></td>
												}
												else
												{
													<td><span class="status process">En proceso</span></td>
												}
											</tr>
										}
										
							</tbody>
						</table>
						<br />
						<br />
					</div>
				</div>	
		</main>
		<!-- MAIN -->
	</section>
    </div>
     
  </div>
  </div>
</div>
<!-- partial -->
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
