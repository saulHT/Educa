@{Layout = null;}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Educa</title>
    
    <link rel="stylesheet" href="~/css/Forgot3Style.css">
    <script src="https://unpkg.com/akar-icons-fonts"></script>
</head>
<body >
      <html>
        <head>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
        </head>
        <body>
            <div id="gradient" />
        </body>
    </html>
    <div class="container">
        <h1>👋 Llena los datos con ayuda de una persona mayor</h1>
            <div class="row">
                
                <div class="column3">
                    <div class="form-box">
                        <form class="form" action="/auth/forgot3" method="post">
                            <span class="title">Cambiar contraseña</span>
                            <span class="subtitle">Ingresa una nueva contraseña, que puedas recordar.</span>
                            <div class="form-container">
                                <input type="text" class="input" name="password" placeholder="Contraseña">
                                <input type="text" class="input" name="passwordvalidate" placeholder="Confirmar contraseña">
                            </div>
                            <button>Cambiar</button>
                        </form>
                        <div class="form-section">
                          <p>No la vuelvas a olvidar! &#128148;</p>
                        </div>
                    </div>
                </div>
                
                <div class="column3">
                    <div class="loader"></div>
                </div>
                <div class="column3">
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                </div>
            </div>
    </div>
    <audio id="MusicForm" >
        <source src="./sounds/Registro.wav" type="audio/wav">
    </audio>
    <a href="/Auth/login" class="btn-flotante"><i class="ai-arrow-left"></i></a>
    <script  src="~/js/ForgotScript.js"></script>
    <script>
        var intentos = 0
        function PlayAudio(){
            var audio = document.getElementById("MusicForm");
            if (intentos == 0) {
                intentos = intentos + 1;
                audio.play();
                
            }
            
        }
    </script>
</body>
</html>
