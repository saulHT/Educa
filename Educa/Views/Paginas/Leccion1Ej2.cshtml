@{Layout = null;}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Leccion1Ej2Style.css">
    <title>Educa</title>
    <link rel="shortcut icon" href="~/Images/Home/LogoIconEduca.png">
</head>
<body>
    <div class="content">
        <div id="title" class="title">
            <div class="title-t">
                <div class="card">
                    <p class="title1">2°</p>
                    <p class="title2">Ejercicio</p>
                    <img class="svg" src="~/Images/Home/LogoBlack250x150.png" width="105" height="55" alt="">
                </div>
            </div>
            <div class="title-t2">Vamos a encontrar su par</div>   
            <div class="loader">
                <div class="loader-small"></div>
                <div class="loader-large"></div>
              </div>
                        
        </div>
        <div id="success-box">
            <div class="dot"></div>
            <div class="dot two"></div>
            <div class="face">
              <div class="eye"></div>
              <div class="eye right2"></div>
              <div class="mouth happy"></div>
            </div>
            <div class="shadow scale"></div>
            <div class="message"><h1 class="alert">Bien hecho!</h1><p>Puntos: 5</p></div>
            <button class="button-box" onclick="Next()"><h1 class="green">Continuar</h1></button>
        </div>
        <div id="error-box">
            <div class="dot"></div>
            <div class="dot two"></div>
            <div class="face2">
                <div class="eye"></div>
                <div class="eye right2"></div>
                <div class="mouth sad"></div>
            </div>
            <div class="shadow move"></div>
            <div class="message"><h1 class="alert">Casi lo consigues.</h1><p>Puntos: 0</p></div>
            <button class="button-box" onclick="Next()"><h1 class="red">Continuar</h1></button>
        </div>
        <div id="info-box">
            <div class="dot"></div>
            <div class="dot two"></div>
            <div class="face">
              <div class="eye"></div>
              <div class="eye right2"></div>
              <div class="mouth happy"></div>
            </div>
            <div class="shadow scale"></div>
            <div class="message"><h1 class="alert">Ejercicio 2</div>
            <button class="button-box" onclick="Inicio()"><h1 class="black">Empezar</h1></button>
        </div>
        <div class="container">
            <main>
                <section id="uno" class="section1">
                    <h1>&#128160; MemoriaEduca</h1>
                    <table>
                        <tr>
                            <td><button id="0" onclick="destapar(0)"></button></td>
                            <td><button id="1" onclick="destapar(1)"></button></td>
                            <td><button id="2" onclick="destapar(2)"></button></td>
                            <td><button id="3" onclick="destapar(3)"></button></td>
                        </tr>
                        <tr>
                            <td><button id="4" onclick="destapar(4)"></button></td>
                            <td><button id="5" onclick="destapar(5)"></button></td>
                            <td><button id="6" onclick="destapar(6)"></button></td>
                            <td><button id="7" onclick="destapar(7)"></button></td>
                        </tr>
                        <tr>
                            <td><button id="8" onclick="destapar(8)"></button></td>
                            <td><button id="9" onclick="destapar(9)"></button></td>
                            <td><button id="10" onclick="destapar(10)"></button></td>
                            <td><button id="11" onclick="destapar(11)"></button></td>
                        </tr>
                        <tr>
                            <td><button id="12" onclick="destapar(12)"></button></td>
                            <td><button id="13" onclick="destapar(13)"></button></td>
                            <td><button id="14" onclick="destapar(14)"></button></td>
                            <td><button id="15" onclick="destapar(15)"></button></td>
                        </tr>
                    </table>
                </section>
                <section id="dos" class="section2">
                    <h2 id="aciertos" class="estadisticas">Aciertos: 0</h2>
                    <h2 id="t-restante" class="estadisticas">Tiempo: 60 segundos</h2>
                    <h2 id="movimientos" class="estadisticas">Movimientos: 0</h2>
                </section>
            </main>
            <footer id="end">
                <p>Hecho con &#128147; por Alumnos de UPN &#9996;</p>
            </footer>
        </div>
        
    </div>
    <script src="~/js/Leccion1Ej2Script.js"></script>
</body>
</html>